<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/fondospa2"
    tools:context=".Nosotros">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Quienes Somos?" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/mision" />

    <TextView
        android:id="@+id/aboutStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VitaSpa es un rincón tranquilo de la ciudad, donde el bullicio se desvanece, nació VitaSpa en 2022. Inspirados por la serenidad de la naturaleza y el deseo de ofrecer un refugio para el alma, fundamos este espacio para transformar días comunes en momentos de paz. Cada vela encendida, cada masaje y cada sonrisa de nuestro equipo refleja nuestro compromiso: renovar tu cuerpo y mente."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:padding="8dp" />
</LinearLayout>